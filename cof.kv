#:kivy 2.0.0
<ScreenOne>:
    FloatLayout:
        size: root.width, root.height


        Image:
            source: "mini_logo.png"
            pos_hint: {"center_x": 0.5, "center_y": 0.88}
            #pos: 100, 100

        Label:
            id: first_sample_header
            text: "[color=454545]Test Sample[/color]"
            markup: True
            pos_hint: {"center_x": 0.2, "center_y": 0.7}


        Label:
            id: second_sample_header
            text: "[color=454545]Second Sample[/color]"
            markup: True
            pos_hint: {"center_x": 0.8, "center_y": 0.7}

        Button:
            text: "Test Screen"
            pos_hint: {'center_x': 0.5, "center_y": 0.1}
            size_hint: (1/8, 1/12)
            on_press:
                root.btn_text()
                root.manager.transition.direction = "left"
                root.manager.transition.duration = 0.5
                root.manager.current = "screen_two"

        TextInput:
            id: first_name
            hint_text: 'Name'
            pos_hint: {'center_x': 0.2, "center_y": 0.65}
            size_hint: 0.2, 0.06

        TextInput:
            id: first_width
            hint_text: 'Width'
            pos_hint: {'center_x': 0.2, "center_y": 0.58}
            size_hint: 0.2, 0.06

        TextInput:
            id: first_height
            hint_text: 'Height'
            pos_hint: {'center_x': 0.2, "center_y": 0.51}
            size_hint: 0.2, 0.06

        TextInput:
            id: first_age
            hint_text: 'Age'
            pos_hint: {'center_x': 0.2, "center_y": 0.44}
            size_hint: 0.2, 0.06

        TextInput:
            id: second_name
            hint_text: 'Name'
            pos_hint: {'center_x': 0.8, "center_y": 0.65}
            size_hint: (0.2, 0.06)  if switch.active else (0,0)

        TextInput:
            id: second_width
            hint_text: 'Width'
            pos_hint: {'center_x': 0.8, "center_y": 0.58}
            size_hint: (0.2, 0.06)  if switch.active else (0,0)

        TextInput:
            id: second_height
            hint_text: 'Height'
            pos_hint: {'center_x': 0.8, "center_y": 0.51}
            size_hint: (0.2, 0.06)  if switch.active else (0,0)

        TextInput:
            id: second_age
            hint_text: 'Age'
            pos_hint: {'center_x': 0.8, "center_y": 0.44}
            size_hint: (0.2, 0.06)  if switch.active else (0,0)

        Switch:
            id: switch
            pos_hint: {'center_x': 0.8, "center_y": 0.35}
            size_hint: 0.2, 0.06


<ScreenTwo>:
    FloatLayout:
        size: root.width, root.height

        Graph:
            id: graph
            max: 1000
            xlabel: "Time"
            ylabel: "Force"
            x_ticks_major:10
            x_ticks_minor:10
            y_ticks_major:500
            y_ticks_minor:2
            y_grid_label:True
            x_grid_label:True
            padding:5
            x_grid:False
            y_grid:False
            xmin:0
            ymax: 0.1
            pos: 0, 0
            size_hint_y: 0.8
            size_hint_x: 0.98
            border_color: (0,0,0,0)
            tick_color: (1,0,0,1)
            label_options: {'color': (1,0,0,1), "bold": True}


        Button:
            text: "Start the test"
            pos_hint: {'center_x': 0.08, "center_y": 0.92}
            size_hint: (1/8, 1/16)
            on_press: root.start()

        Button:
            text: "Stop the test"
            pos_hint: {'center_x': 0.22, "center_y": 0.92}
            size_hint: (1/8, 1/16)
            on_press: root.stop()

        Button:
            text: "Go back"
            pos_hint: {'center_x': 0.5, "center_y": 0.84}
            size_hint: (1/8, 1/16)
            on_press:
                root.manager.transition.direction = "right"
                root.manager.transition.duration = 0.5
                root.manager.current = "screen_one"

        Button:
            id: btn
            text: "Results"
            pos_hint: {'center_x': 0.5, "center_y": 0.92}
            size_hint: (1/8, 1/16)
            on_press:
                root.manager.transition.direction = "left"
                root.manager.transition.duration = 0.5
                root.manager.current = "screen_three"

        Button:
            text: "Set Angle"
            pos_hint: {'center_x': 0.8, "center_y": 0.84}
            size_hint: (1/8, 1/16)
            on_press:
                root.set_angle()

        TextInput:
            id: angle_text
            hint_text: 'Angle'
            pos_hint: {'center_x': 0.8, "center_y": 0.92}
            size_hint: 0.2, 0.06






<ScreenThree>:
    FloatLayout:
        size: root.width, root.height

        Button:
            text: "Calculate Results"
            pos_hint: {'center_x': 0.2, 'center_y': 0.2}
            size_hint: (1/5,1/16)
            on_press: root.update_results()
        Button:
            text: "Create Results PDF"
            pos_hint: {'center_x': 0.8, "center_y": 0.2}
            size_hint: (1/5, 1/16)
            on_press: root.createPDF()

        Button:
            text: "Go back"
            pos_hint: {'center_x': 0.8, "center_y": 0.1}
            size_hint: (1/8, 1/16)
            on_press:
                root.manager.transition.direction = "right"
                root.manager.transition.duration = 0.5
                root.manager.current = "screen_two"

        Label:
            id: label_static_cof
            text: "[color=454545]Static Coefficient of friction: [/color]"
            markup: True
            pos_hint: {"center_x": 0.19, "center_y": 0.7}
            halign: "left"
            bold: True

        Label:
            id: label_dynamic_cof
            text: "[color=454545]Dynamic Coefficient of friction: [/color]"
            markup: True
            pos_hint: {"center_x": 0.2, "center_y": 0.5}
            halign: "left"
            bold: True


        Label:
            text: "[color=454545] Date: [/color]"
            markup: True
            pos_hint: {"center_x": 0.1, "center_y": 0.1}
            halign: "left"
            bold: True

        Label:
            id: label_date
            text: root.date_text
            markup: True
            pos_hint: {"center_x": 0.18, "center_y": 0.1}
            halign: "left"
            bold: True
